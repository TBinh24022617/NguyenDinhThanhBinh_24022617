{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Iinclude",
        "-Llib",
        "-o",
        "${workspaceFolder}/main.exe",
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/include/Ghost.cpp",
        "${workspaceFolder}/include/Pinky.cpp",
        "${workspaceFolder}/include/Inky.cpp",
        "-lSDL2",
        "-lSDL2main",
        "-lSDL2_image",
        "-lSDL2_mixer",
        "-lSDL2_ttf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build main.cpp + Ghost.cpp using g++"
    }
  ]
}
